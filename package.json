{
    "name": "dagor-shader-language-support",
    "displayName": "Dagor Shader Language Support",
    "description": "Language support extension for the Dagor Shader Language.",
    "publisher": "gaijin",
    "version": "0.0.1",
    "license": "BSD-3-Clause",
    "repository": {
        "type": "git",
        "url": "https://github.com/Gaijin-Games-KFT/Dagor-Shader-Language-Support-for-Visual-Studio-Code"
    },
    "bugs": {
        "url": "https://github.com/Gaijin-Games-KFT/Dagor-Shader-Language-Support-for-Visual-Studio-Code/issues"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "gaijin",
        "dagor",
        "shader",
        "language"
    ],
    "engines": {
        "vscode": "^1.83.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "dagorsh",
                "aliases": [
                    "Dagor Shader Language",
                    "dagorsh"
                ],
                "extensions": [
                    "sh"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dagorsh",
                "scopeName": "source.dagorsh",
                "path": "./Dagor-Shader-Language-Server/grammar/dagorsh.tmLanguage.json"
            }
        ]
    },
    "main": "./out/client-desktop",
    "browser": "./out/client-web",
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "build": "webpack",
        "watch": "webpack --watch",
        "package": "vsce package",
        "build-tests": "tsc -p ./tsconfig.test.json",
        "watch-tests": "tsc -w -p ./tsconfig.test.json",
        "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. .",
        "eslint": "eslint ./src ./Dagor-Shader-Language-Server/src --ext .ts",
        "prettier-lint": "prettier --check .",
        "prettier-format": "prettier --write .",
        "test": "sh ./scripts/e2e.sh",
        "prepare": "husky install"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.3",
        "@types/node": "^20.8.6",
        "@types/vscode": "^1.83.0",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "@vscode/test-electron": "^2.3.5",
        "@vscode/test-web": "^0.0.47",
        "@vscode/vsce": "^2.21.1",
        "eslint": "^8.51.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.1",
        "mocha": "^10.2.0",
        "prettier": "^3.0.3",
        "prettier-plugin-organize-imports": "^3.2.3",
        "ts-loader": "^9.5.0",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "lint-staged": {
        "*": "prettier --write --ignore-unknown"
    }
}
